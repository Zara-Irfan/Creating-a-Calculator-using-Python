import http.server
import socketserver
import webbrowser
import threading

PORT = 8080

class FancyCalculatorHandler(http.server.SimpleHTTPRequestHandler):
    def do_GET(self):
        if self.path == "/":
            self.send_response(200)
            self.send_header("Content-type", "text/html")
            self.end_headers()

            html = """
            <!DOCTYPE html>
            <html lang="en">
            <head>
                <meta charset="UTF-8">
                <meta name="viewport" content="width=device-width, initial-scale=1.0">
                <title>Neon Scientific Calculator</title>
                <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap" rel="stylesheet">
                <style>
                    body {
                        background-color: #0d1117;
                        font-family: 'Orbitron', sans-serif;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        height: 100vh;
                        color: #00ffea;
                        margin: 0;
                    }
                    .calculator {
                        background: linear-gradient(145deg, #0b0f14, #131a21);
                        box-shadow: 0 0 20px #00ffee40, inset 0 0 10px #00ffee20;
                        border-radius: 20px;
                        padding: 25px;
                        width: 380px;
                        text-align: center;
                        transition: 0.4s;
                    }
                    .calculator:hover {
                        box-shadow: 0 0 30px #00ffee80, inset 0 0 15px #00ffee30;
                    }
                    .display {
                        width: 100%;
                        height: 60px;
                        border: none;
                        border-radius: 10px;
                        background-color: #0a0f14;
                        color: #00ffea;
                        font-size: 28px;
                        text-align: right;
                        padding-right: 15px;
                        margin-bottom: 20px;
                        box-shadow: inset 0 0 10px #00ffee30;
                    }
                    .row {
                        display: flex;
                        justify-content: space-between;
                        margin: 5px 0;
                    }
                    .btn {
                        width: 70px;
                        height: 60px;
                        background-color: #161b22;
                        border: none;
                        border-radius: 10px;
                        color: #00ffea;
                        font-size: 18px;
                        cursor: pointer;
                        box-shadow: 0 0 10px #00ffee30;
                        transition: all 0.2s;
                    }
                    .btn:hover {
                        background-color: #00ffee30;
                        transform: scale(1.05);
                        box-shadow: 0 0 20px #00ffee60;
                    }
                    .btn.operator {
                        color: #ff9800;
                    }
                    .btn.equal {
                        background-color: #00ffee40;
                        color: black;
                        font-weight: bold;
                    }
                    .topbar {
                        text-align: center;
                        margin-bottom: 15px;
                        color: #00ffee;
                        font-size: 18px;
                    }
                    .footer {
                        margin-top: 10px;
                        font-size: 12px;
                        opacity: 0.7;
                    }
                </style>
            </head>
            <body>
                <div class="calculator">
                    <div class="topbar" id="timeDisplay">--:--:--</div>
                    <input type="text" id="display" class="display" disabled>

                    <div class="row">
                        <button class="btn" onclick="press('(')">(</button>
                        <button class="btn" onclick="press(')')">)</button>
                        <button class="btn" onclick="press('%')">%</button>
                        <button class="btn operator" onclick="press('/')">Ã·</button>
                    </div>
                    <div class="row">
                        <button class="btn" onclick="press('7')">7</button>
                        <button class="btn" onclick="press('8')">8</button>
                        <button class="btn" onclick="press('9')">9</button>
                        <button class="btn operator" onclick="press('*')">Ã—</button>
                    </div>
                    <div class="row">
                        <button class="btn" onclick="press('4')">4</button>
                        <button class="btn" onclick="press('5')">5</button>
                        <button class="btn" onclick="press('6')">6</button>
                        <button class="btn operator" onclick="press('-')">âˆ’</button>
                    </div>
                    <div class="row">
                        <button class="btn" onclick="press('1')">1</button>
                        <button class="btn" onclick="press('2')">2</button>
                        <button class="btn" onclick="press('3')">3</button>
                        <button class="btn operator" onclick="press('+')">+</button>
                    </div>
                    <div class="row">
                        <button class="btn" onclick="press('0')">0</button>
                        <button class="btn" onclick="press('.')">.</button>
                        <button class="btn equal" onclick="calculate()">=</button>
                        <button class="btn operator" onclick="clearDisplay()">C</button>
                    </div>
                    <div class="row">
                        <button class="btn" onclick="press('Math.sqrt(')">âˆš</button>
                        <button class="btn" onclick="press('**2')">xÂ²</button>
                        <button class="btn" onclick="press('Math.PI')">Ï€</button>
                        <button class="btn" onclick="press('Math.log10(')">log</button>
                    </div>
                    <div class="row">
                        <button class="btn" onclick="press('Math.sin(')">sin</button>
                        <button class="btn" onclick="press('Math.cos(')">cos</button>
                        <button class="btn" onclick="press('Math.tan(')">tan</button>
                        <button class="btn" onclick="press('Math.log(')">ln</button>
                    </div>
                    <div class="footer">âš¡ Neon Scientific Calculator - Made by 
                    Zara Irfan</div>
                </div>

                <script>
                    function updateTime() {
                        const now = new Date();
                        document.getElementById("timeDisplay").textContent = now.toLocaleTimeString();
                    }
                    setInterval(updateTime, 1000);
                    updateTime();

                    function press(val) {
                        document.getElementById("display").value += val;
                    }

                    function clearDisplay() {
                        document.getElementById("display").value = "";
                    }

                    function calculate() {
                        try {
                            let result = eval(document.getElementById("display").value);
                            document.getElementById("display").value = result;
                        } catch {
                            document.getElementById("display").value = "Error";
                        }
                    }

                    // Keyboard input
                    document.addEventListener("keydown", (e) => {
                        const allowed = "0123456789+-*/().";
                        if (allowed.includes(e.key)) {
                            press(e.key);
                        } else if (e.key === "Enter") {
                            calculate();
                        } else if (e.key === "Backspace") {
                            let disp = document.getElementById("display");
                            disp.value = disp.value.slice(0, -1);
                        } else if (e.key === "Escape") {
                            clearDisplay();
                        }
                    });
                </script>
            </body>
            </html>
            """
            self.wfile.write(html.encode())

def run_server():
    with socketserver.TCPServer(("", PORT), FancyCalculatorHandler) as httpd:
        print(f"ðŸŒŸ Neon Scientific Calculator running at: http://localhost:{PORT}")
        httpd.serve_forever()

if __name__ == "__main__":
    threading.Thread(target=run_server, daemon=True).start()
    webbrowser.open(f"http://localhost:{PORT}")
    input("Press Enter to stop server...\n")
